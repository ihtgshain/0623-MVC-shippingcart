@using prjMvcDemo.Models
@model List<CCustomer>


@{
    ViewBag.Title = "List";
}

<h2>客戶列表</h2>
@using (Html.BeginForm())
{
    @:關鍵字 @Html.TextBox("txtKeyword")
    <input type="submit" value="查詢" />
}
<form method="post">
    關鍵字 <input type="text" name="txtKeyword" />
    <input type="submit" value="查詢" />
</form>

<p>
    <a href="~/Customer/New">新增客戶</a>
</p>

@*<p>
        <a href="~/Customer/Delete">刪除客戶</a>
    </p>*@

<table class="table table-hover">
    <thead>
        <tr>
            <td>序號</td>
            <td>姓名</td>
            <td>電話</td>
            <td>信箱</td>
            <td>地址</td>
            <td>密碼</td>
            <td>修改</td>
            <td>刪除</td>
            <td>刪除</td>
        </tr>
    </thead>

    @{
        int count = 0;
        foreach (CCustomer c in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@c.fName</td>
                <td>@c.fPhone</td>
                <td>@c.fEmail</td>
                <td>@c.fAddress</td>
                <td>@c.fPassword</td>
                <td>@Html.ActionLink("修改", "Edit", "Customer", new { id = c.fId },new { @class="btn btn-success"})</td>
                <td><a href="~/Customer/Delete/@c.fId" onclick="return confirm('確定要刪除資料嗎？')" class="btn btn-danger">刪除</a></td>
                <td>
                    @Html.ActionLink("刪除", "Delete", "Customer", new { id = c.fId },
               new { onclick = "return confirm('確定要刪除資料嗎？')" })
            </td>

        </tr>
    }
    }





</table>
